<div class="box">
<h2 class="title"><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "post-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <div class="field">
    <%= label f, :title, "what this shit about", class: "label"  %>
    <div class="control">
      <%= text_input f, :title, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= label f, :body, "go on then...", class: "label" %>
    <div class="control">
      <%= textarea f, :body, class: "textarea", rows: 30 %>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= submit "Save", phx_disable_with: "Saving...", class: "button is-primary" %>
    </div>
  </div>
</form>
</div>
